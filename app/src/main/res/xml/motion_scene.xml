<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <ConstraintSet android:id="@+id/start">
    <Constraint
      android:id="@+id/laserFire"
      android:layout_width="@dimen/laser_width"
      android:layout_height="@dimen/laser_height"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/trooper"/>
  </ConstraintSet>

  <ConstraintSet android:id="@+id/end">
    <Constraint
      android:id="@+id/laserFire"
      android:layout_width="@dimen/laser_width"
      android:layout_height="@dimen/laser_height"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>
  </ConstraintSet>

  <Transition
    app:constraintSetStart="@id/start"
    app:constraintSetEnd="@id/end"
    app:duration="1000">

    <OnClick
      app:targetId="@id/trooper"
      app:clickAction="toggle"/>

    <KeyFrameSet>
        <KeyPosition
          app:framePosition="50"
          app:motionTarget="@id/laserFire"
          app:keyPositionType="parentRelative"
          app:percentX="0.5"
          app:percentY="0.5"/>

      <KeyPosition
        app:framePosition="80"
        app:motionTarget="@id/laserFire"
        app:keyPositionType="parentRelative"
        app:percentX="0.25"
        app:percentY="0.8"/>

      <KeyAttribute
        android:rotation="0"
        app:framePosition="50"
        app:motionTarget="@id/laserFire"/>

      <KeyAttribute
        android:rotation="45"
        app:framePosition="100"
        app:motionTarget="@id/laserFire"/>

      <KeyAttribute
        android:alpha="1.0"
        app:framePosition="75"
        app:motionTarget="@id/laserFire"/>

      <KeyAttribute
        android:alpha="0.0"
        app:framePosition="100"
        app:motionTarget="@id/laserFire"/>

      <KeyAttribute
        android:alpha="0.0"
        app:framePosition="60"
        app:motionTarget="@id/message"/>

      <KeyAttribute
        android:alpha="1.0"
        app:framePosition="100"
        app:motionTarget="@id/message"/>

      <KeyAttribute
        app:framePosition="0"
        app:motionTarget="@id/laserFire">
        <CustomAttribute
          app:attributeName="colorFilter"
          app:customColorValue="#FF0000"/>
      </KeyAttribute>

      <KeyAttribute
        app:framePosition="50"
        app:motionTarget="@id/laserFire">

        <CustomAttribute
          app:attributeName="colorFilter"
          app:customColorValue="#00FF00"/>
      </KeyAttribute>

    </KeyFrameSet>
  </Transition>
</MotionScene>